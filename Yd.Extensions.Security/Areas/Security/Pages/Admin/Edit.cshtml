@page
@model EditModel
@{
    Layout = "_Modal";
    ViewBag.Title = "修改资料";
}

<form method="post">
    <input type="hidden" asp-for="Input.UserId"/>
    <div class="form-group">
        <label>姓名：</label>
        <input class="form-control" asp-for="Input.UserName"/>
        <span class="text-danger" asp-validation-for="Input.UserName"></span>
    </div>
    <div class="form-group">
        <label>电话号码</label>
        <input class="form-control" asp-for="Input.PhoneNumber" />
        <span class="text-danger" asp-validation-for="Input.PhoneNumber"></span>
    </div>
    <div class="form-group">
        <label>电子邮件</label>
        <input class="form-control" asp-for="Input.Email" />
        <span class="text-danger" asp-validation-for="Input.Email"></span>
    </div>
</form>