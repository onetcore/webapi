@page
@model IndexModel
@{
    ViewBag.Title = "开放服务列表";
    ViewBag.Current = "open.services";
    var tab = true;
    var pane = true;
}

<div class="tab-content">
    @foreach (var doc in Model.Document)
    {
        <div .class-show="pane" .class-active="pane" class="tab-pane fade show active" id="@doc.Key">
            @foreach (var api in doc.Value)
            {
                <div class="media text-muted pt-3">
                    <div class="mr-2 text-white rounded position-relative" style="background-color: @(api.HttpMethod.GetColor()); font-size: 12px; width: 32px; height: 32px; overflow: hidden;">
                        <span class="b-span">@api.HttpMethod.ToString().ToUpper()</span>
                    </div>
                    <div class="media-body pb-3 mb-0 small lh-125 border-bottom">
                        <div class="d-flex">
                            <a js-modal="click" asp-page="./Test" asp-route-method="@api.HttpMethod.Method" asp-route-id="@api.RouteTemplate"><strong class="d-block">@@@api.RouteTemplate</strong></a>
                            <a .visible="@(!api.IsAnonymous)" class="text-success ml-1" title="需要登录验证" .icon="fa-lock"></a>
                        </div>
                        @api.Summary?.Summary
                        @foreach (var parameter in api.Parameters)
                        {
                            <div class="mt-2">
                                @parameter.Name:{
                                @if (parameter.ParameterType.IsLinkable())
                                {
                                    <a asp-page="./Type" asp-route-type="@parameter.ParameterType.FullName">@parameter.ParameterType.GetRealTypeName()</a>
                                }
                                else
                                {
                                    <span>@parameter.ParameterType.GetRealTypeName()</span>
                                }
                                } @api.GetParameterDescriptor(parameter.Name)?.Summary
                            </div>
                        }
                        <div class="mt-2">@api.Summary?.Returns?.Summary</div>
                    </div>
                </div>
            }
        </div>
        pane = false;
    }
</div>

@section summary
{
    <ul class="nav nav-tabs" role="tablist">
        @foreach (var groupName in Model.Document.Keys)
        {
            <li .class-active="tab" class="nav-item">
                <a .class-active="tab" class="nav-link" data-toggle="tab" href="#@(groupName)" role="tab">@Model.GetSettingString("api." + groupName)</a>
            </li>
            tab = false;
        }
    </ul>
}

@section header
{
    <link rel="stylesheet" href="~/lib/prettify/prettify.min.css" />
}

@section footer
{
    <script src="~/lib/prettify/prettify.min.js"></script>
}