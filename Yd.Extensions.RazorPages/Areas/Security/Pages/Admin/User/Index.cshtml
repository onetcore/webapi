@page

@model IndexModel
@{
    ViewData["Title"] = "编辑资料";
    ViewData["Current"] = AccountMenu.Index;
}

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Input.UserName"></label>
        <input asp-for="Input.UserName" class="form-control max-250" />
    </div>
    <div class="form-group">
        <label asp-for="Input.Email"></label>
        @if (Model.IsEmailConfirmed)
        {
            <div class="input-group">
                <input asp-for="Input.Email" class="form-control max-250" />
                <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
            </div>
        }
        else
        {
            <input asp-for="Input.Email" class="form-control max-250" />
            <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link">发送激活邮件</button>
        }
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.PhoneNumber"></label>
        <input asp-for="Input.PhoneNumber" class="form-control max-250" />
        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-outline-secondary">保存</button>
</form>