@page "/register"
@model RegisterModel
@{
    ViewData["Title"] = "用户注册";
}

<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <h4 class="text-primary mb-4 text-center">@ViewBag.Title</h4>
    <div class="form-label-group">
        <input asp-for="Input.UserName" class="form-control" placeholder="登录名称" />
        <label asp-for="Input.UserName"></label>
        <span asp-validation-for="Input.UserName" class="text-danger"></span>
    </div>
    <div class="form-label-group">
        <input asp-for="Input.Email" class="form-control" placeholder="电子邮件" />
        <label asp-for="Input.Email"></label>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-label-group">
        <input asp-for="Input.Password" class="form-control" placeholder="密码" />
        <label asp-for="Input.Password"></label>
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="form-label-group">
        <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="确认密码" />
        <label asp-for="Input.ConfirmPassword"></label>
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-label-group" .visible="@Model.Settings.ValidCode">
        <div class="input-group input-group-append">
            <input asp-for="Input.Code" class="form-control" placeholder="验证码" />
            <label>验证码</label>
            <div class="input-group-append validcode"><gt:verifier key="register" size="16" height="36" length="6"></gt:verifier></div>
        </div>
        <span asp-validation-for="Input.Code" class="text-danger"></span>
    </div>
    <button class="btn btn-lg btn-primary btn-block mb-3" type="submit">注册</button>
</form>
<div class="link-panel">
    <div class="link-right">
        <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">已有账户？点击登录</a>
    </div>
</div>