@page
@model IndexModel
@{
    ViewBag.Title = "邮件列表";
    ViewBag.Current = "sys.email";
}

<div class="filter">
    <form method="get" class="left form-inline">
        <label>状态：</label>
        <gt:enum-dropdownlist class="form-control form-control-sm border-secondary" for="Query.Status"></gt:enum-dropdownlist>
        <label>邮件地址：</label>
        <input class="form-control form-control-sm border-secondary" asp-for="Query.To" />
        <label>标题：</label>
        <div class="input-group input-group-sm">
            <input class="form-control form-control-sm border-secondary" asp-for="Query.Title" />
            <div class="input-group-append">
                <button class="btn btn-sm btn-outline-secondary" type="submit">
                    <span class="fa fa-search"></span>
                </button>
            </div>
        </div>
    </form>
    <div class="right">
        <a js-modal="click" class="btn btn-sm btn-outline-secondary" asp-page="./send"><i class="fa fa-send-o"></i> 发送邮件</a>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-striped table-bordered data-view">
        <thead>
            <tr>
                <th>标题</th>
                <th>电子邮件</th>
                <th>状态</th>
                <th class="moz-datetime">添加时间</th>
            </tr>
        </thead>
        <tbody class="data-content">
            @foreach (var email in Model.Emails)
            {
                <tr>
                    <td>
                        @email.Title
                        <div class="data-action  pull-right">
                            <a js-action="modal" title="编辑" asp-page="./send" asp-route-id="@email.Id"><i class="fa fa-pencil"></i></a>
                        </div>
                    </td>
                    <td>@email.To</td>
                    <td>@Model.Localizer.GetString(email.Status)</td>
                    <td>@email.CreatedDate.ToString("yyyy-MM-dd HH:mm")</td>
                </tr>
            }
            <gt:warning-tabled colspan="4" attach="Model.Emails">没有匹配的邮件！</gt:warning-tabled>
        </tbody>
    </table>
</div>