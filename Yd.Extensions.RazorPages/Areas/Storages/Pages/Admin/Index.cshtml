@page
@model IndexModel
@{
    ViewBag.Title = "文件列表";
    ViewBag.Current = "storages.home";
}

<div class="gt-toolbar mb-3">
    <form method="get" class="form-inline">
        <gt:toolbar-form-group>
            <label>类型：</label>
            <gt:extension-name-dropdownlist class="form-control form-control-sm" default-text="选择类型" for="Query.ExtensionName"></gt:extension-name-dropdownlist>
        </gt:toolbar-form-group>
        <gt:toolbar-form-group>
            <label>名称：</label>
            <gt:toolbar-input-group>
                <input type="text" asp-for="Query.Name" />
                <gt:append-search />
            </gt:toolbar-input-group>
        </gt:toolbar-form-group>
    </form>
    <gt:toolbar-btn-group right="true">
        <a js-checked="post" js-confirm="你确定要删除所选择的文件吗？" asp-page-handler="Delete" .icon="fa-trash-o">删除</a>
        <a js-upload="true" href="@Url.Page("./Index", "Upload")" .icon="fa-upload">上传文件</a>
    </gt:toolbar-btn-group>
</div>

<div class="table-responsive">
    <table class="table table-striped data-view">
        <thead>
            <tr>
                <th class="checkbox-only"><gt:checkall></gt:checkall></th>
                <th>名称</th>
                <th>类型</th>
                <th>添加时间</th>
            </tr>
        </thead>
        <tbody class="data-content">
            @foreach (var file in Model.Files)
            {
                <tr>
                    <td class="checkbox-only"><gt:checkbox value="@file.Id"></gt:checkbox></td>
                    <td>
                        @if (file.Extension.IsPicture())
                        {
                            <img class="align-middle" src="@file.GetThumbUrl(24, 24)" />
                        }
                        else
                        {
                            <img height="24" class="align-middle" src="~/storages/images/@(file.Extension.Trim('.')).png" onerror="this.src='/storages/images/default.png'" />
                        }
                        @(file.Name)@(file.Extension)
                        <div class="data-action">
                            <a js-modal="click" asp-page="./Edit" asp-route-id="@file.Id"><i class="fa fa-pencil"></i> 重命名</a>
                            <a js-confirm="你确定要删除“@(file.Name)@(file.Extension)”吗？" js-action="post" asp-page-handler="Delete" asp-route-ids="@file.Id"><i class="fa fa-trash-o"></i> 删除</a>
                            <a target="_blank" href="@file.Url"><i class="fa fa-link"></i> 访问</a>
                        </div>
                    </td>
                    <td>@Model.GetSettingString($"extensionname.{file.ExtensionName}")</td>
                    <td>
                        @file.CreatedDate.ToString("yyyy-MM-dd HH:mm:ss")
                    </td>
                </tr>
            }
            <gt:warning-tabled colspan="4" attach="Model.Files">还没有上传任何文件！</gt:warning-tabled>
        </tbody>
    </table>
    <gt:page class="page-center" data="@Model.Files" route-extension-name="@Model.Query.ExtensionName" route-name="@Model.Query.Name"></gt:page>
</div>
