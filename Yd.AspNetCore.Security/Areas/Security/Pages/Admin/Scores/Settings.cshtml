@page
@model SettingsModel
@{
    ViewBag.Title = "积分配置";
    Layout = "_Modal";
}

<form method="post">
    <div class="form-group">
        <label>积分名称</label>
        <input asp-for="Input.ScoreName" class="form-control" />
        <span class="text-danger" asp-validation-for="Input.ScoreName"></span>
    </div>
    <div class="form-group">
        <label>积分单位</label>
        <input asp-for="Input.ScoreUnit" class="form-control" />
    </div>
</form>