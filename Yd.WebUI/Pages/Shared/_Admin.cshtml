            <h1>@(settings.ShortName ?? settings.SiteName)</h1>
        </a>
    </div>
    <gt:menu class="nav js-menu" provider="admin"></gt:menu>
</div>
<div class="mini-bg"></div>
<main>
    <header class="d-print-none">
        <i js-toggle="navbar" class="navbar-trigger fa fa-indent"></i>
